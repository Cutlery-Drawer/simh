# EditorConfig: https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h}]
indent_style = space

# Python
[*.{py,py3}]
end_of_line = lf
indent_style = space
indent_size = 4
max_line_length = 95

# reStructuredText
[*.{rst,rest}{,.txt}]
max_line_length = off
indent_style = space
indent_size = 4
end_of_line = lf

# Files that require Unix-style line-endings
[{*.sh,SetupNet}]
end_of_line = lf

# Tab-formatted files: SVGs, Makefiles, git-config(1), et al
[{{GNU,BSD,g,s,}{M,m}akefile,descrip.mms,*.mk,*.svg,*.gitconfig,.git/config}]
indent_style = tab
end_of_line = lf

# YAML, mainly used to configure CI services
[*.{yaml,yml}]
indent_style = space
indent_size = 4

# Git commit messages
[{COMMIT_EDITMSG,MERGE_MSG}]
max_line_length = 72
indent_style = space
indent_size = 4
